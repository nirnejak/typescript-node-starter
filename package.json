    "@fastify/helmet": "^13.0.0",
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
