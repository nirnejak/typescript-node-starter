{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "Typescript Node Starter",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx}",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirnejak/typescript-node-starter.git"
  },
  "keywords": [
    "Typescript",
    "Node",
    "Fastify",
    "Drizzle"
  ],
  "author": "Jitendra Nirnejak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nirnejak/typescript-node-starter/issues"
  },
  "homepage": "https://github.com/nirnejak/typescript-node-starter#readme",
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@neondatabase/serverless": "^1.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/heapdump": "^0.3.4",
    "@types/node": "^25.0.9",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-love": "^145.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "volta": {
    "node": "24.12.0"
  }
}
