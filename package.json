{
  "name": "fastify-bun-starter",
  "version": "1.0.0",
  "description": "Fastify Bun Starter",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --external:@neondatabase/serverless --external:drizzle-orm --external:fastify --external:@fastify/helmet --external:date-fns",
    "start": "bun dist/index.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx}",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirnejak/fastify-bun-starter.git"
  },
  "keywords": [
    "Typescript",
    "Bun",
    "Fastify",
    "Drizzle"
  ],
  "author": "Jitendra Nirnejak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nirnejak/fastify-bun-starter/issues"
  },
  "homepage": "https://github.com/nirnejak/fastify-bun-starter#readme",
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@neondatabase/serverless": "^1.0.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1",
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-love": "^145.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "volta": {
    "node": "24.12.0"
  }
}
